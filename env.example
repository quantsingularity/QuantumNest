# ==============================================================================
# QuantumNest Environment Configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. Core Application and Flask Settings
# ------------------------------------------------------------------------------
# A strong secret key for the application and JWTs (MUST be at least 32 characters long)
SECRET_KEY="your_strong_secret_key_at_least_32_chars"

# Flask environment (e.g., development, production, testing)
FLASK_ENV="development"

# Application logging level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Log file path (optional)
LOG_FILE=""

# Port for the Flask application
PORT="5000"


# ------------------------------------------------------------------------------
# 2. Database Configuration
# ------------------------------------------------------------------------------
# Database connection URL (e.g., sqlite:///./quantumnest.db or postgresql://user:pass@host:port/db)
DATABASE_URL="sqlite:///./quantumnest.db"


# ------------------------------------------------------------------------------
# 3. Caching and Redis Configuration
# ------------------------------------------------------------------------------
# Redis URL for caching and rate limiting (e.g., redis://localhost:6379/0)
REDIS_URL="redis://localhost:6379/0"

# Redis password (optional)
REDIS_PASSWORD=""

# Redis database number
REDIS_DB="0"


# ------------------------------------------------------------------------------
# 4. AI/LLM Configuration
# ------------------------------------------------------------------------------
# API Key for OpenAI or an OpenAI-compatible service
OPENAI_API_KEY=""

# Base URL for the OpenAI-compatible API (optional)
OPENAI_API_BASE=""

# API Key for HuggingFace models
HUGGINGFACE_API_KEY=""

# Directory where AI models are stored
AI_MODELS_DIR="./models"


# ------------------------------------------------------------------------------
# 5. Financial Data API Keys
# ------------------------------------------------------------------------------
ALPHA_VANTAGE_API_KEY=""
QUANDL_API_KEY=""
IEX_CLOUD_API_KEY=""


# ------------------------------------------------------------------------------
# 6. Blockchain Configuration
# ------------------------------------------------------------------------------
# RPC URL for the Ethereum network
ETHEREUM_RPC_URL="http://localhost:8545"

# RPC URL for the Polygon network
POLYGON_RPC_URL="https://polygon-rpc.com"

# RPC URL for the Binance Smart Chain (BSC) network
BSC_RPC_URL="https://bsc-dataseed.binance.org"

# Private key for the wallet used for contract interactions (BE CAREFUL WITH THIS)
PRIVATE_KEY=""


# ------------------------------------------------------------------------------
# 7. Email/SMTP Configuration
# ------------------------------------------------------------------------------
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USERNAME=""
SMTP_PASSWORD=""
EMAIL_FROM=""


# ------------------------------------------------------------------------------
# 8. Background Task (Celery) Configuration
# ------------------------------------------------------------------------------
# URL for the Celery message broker (e.g., redis://localhost:6379/0)
CELERY_BROKER_URL="redis://localhost:6379/0"

# URL for the Celery result backend (e.g., redis://localhost:6379/0)
CELERY_RESULT_BACKEND="redis://localhost:6379/0"


# ------------------------------------------------------------------------------
# 9. Monitoring and Observability
# ------------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=""
